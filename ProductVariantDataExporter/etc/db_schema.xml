<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="catalog_data_exporter_product_variants" resource="default" engine="innodb" comment="Product Variant Feed Storage">
        <column
            xsi:type="varchar"
            name="parent_id"
            nullable="false"
            length="64"
            comment="Parent product Id"
        />
        <column
            xsi:type="varchar"
            name="product_id"
            nullable="false"
            length="64"
            comment="Variant product Id"
        />
        <column xsi:type="varchar"
                name="id"
                nullable="false"
                length="64"
                comment="Variant Id"
        />
        <column
            xsi:type="mediumtext"
            name="feed_data"
            nullable="false"
            comment="Feed Data"
        />
        <column
            xsi:type="timestamp"
            name="modified_at"
            on_update="true"
            nullable="false"
            default="CURRENT_TIMESTAMP"
            comment="Created At"
        />
        <column
            xsi:type="tinyint"
            name="is_deleted"
            nullable="false"
            default="0"
            comment="Variant Deleted"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="catalog_data_exporter_product_variants_modified_at" indexType="btree">
            <column name="modified_at"/>
        </index>
    </table>
</schema>
